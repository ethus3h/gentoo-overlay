depend() {
	need net
}

start() {
	ebegin "Starting tvheadend"
	start-stop-daemon --start --quiet --exec /usr/bin/tvheadend -- -f -u tvheadend -g video
	eend $?
}

stop() {
	ebegin "Stopping tvheadend"
	start-stop-daemon --stop --quiet --exec /usr/bin/tvheadend
	eend $?

}
